" VIMRC customizations
set nocompatible

filetype indent plugin on
syntax on

" Color Scheme Settings
colorscheme gruvbox

" Other settings
set wildmenu
set showcmd
set hlsearch
set incsearch
set lazyredraw
set showmatch

set backspace=indent,eol,start
set autoindent

set ruler
set laststatus=2

set confirm
set visualbell

set cmdheight=2

set number
set relativenumber

set shiftwidth=4
set softtabstop=4
set expandtab
set tabstop=4

set encoding=utf-8

set cursorline
set autoread
set background=dark

set foldenable
set foldlevelstart=10
set foldmethod=indent

set wrap
set textwidth=100
set linebreak

set scrolloff=5

set title

set noswapfile
set nobackup

set spell
